{
  "name": "notifique-me-admin",
  "version": "1.2.0",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "dev": "tsx server/_core/index.ts",
    "dev:client": "vite --config client/vite.config.ts",
    "dev:server": "cross-env NODE_ENV=development tsx server/_core/index.ts",

    "build:client": "vite build --config client/vite.config.ts",

    "build:server": "esbuild server/_core/index.ts --platform=node --bundle --format=esm --outfile=dist/index.js",

    "build": "npm run build:client && npm run build:server",

    "start": "cross-env NODE_ENV=production node dist/index.js",

    "check": "tsc --noEmit",
    "format": "prettier --write .",
    "test": "vitest run",

    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:init": "tsx scripts/init-db.ts",

    "clean": "rimraf dist node_modules/.vite"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",

    "@tanstack/react-query": "^4.36.1",

    "@trpc/client": "^10.45.4",
