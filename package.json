{
  "name": "notifique-me-admin",
  "version": "1.2.0",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "dev": "tsx server/_core/index.ts",
    "dev:client": "vite --config client/vite.config.ts",
    "dev:server": "cross-env NODE_ENV=development tsx server/_core/index.ts",

    "build:client": "vite build --config client/vite.config.ts",
    "build:server": "esbuild server/_core/index.ts --platform=node --bundle --format=esm --packages=external --outfile=dist/index.js",
    "build": "npm run build:client && npm run build:server",

    "start": "cross-env NODE_ENV=production node dist/index.js",

    "check": "tsc --noEmit",
    "format": "prettier --write .",
    "test": "vitest run",

    "db:push": "drizzle-kit generate && drizzle-kit migrate",
    "db:init": "tsx scripts/init-db.ts",
    "db:migrate": "tsx scripts/init-db.ts",

    "setup": "npm install && npm run db:init && npm run check",
    "clean": "rimraf dist node_modules/.vite",
    "worker": "tsx scripts/process-schedules.js --loop"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.693.0",
    "@aws-sdk/s3-request-presigner": "^3.975.0",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-aspect-ratio": "^1.1.7",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "cookie-parser": "^1.4.6"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.0",
    "@tailwindcss/vite": "^4.0.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.0",
    "prettier": "^3.6.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.0",
    "typescript": "^5.8.0",
    "vite": "^7.3.0",
    "vitest": "^3.2.0"
  }
}
